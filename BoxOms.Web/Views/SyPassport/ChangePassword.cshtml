@{
    Layout = null;
}

@model VM_SyPassport_ChangePassword

@using (Ajax.BeginForm("ChangePassword", "SyPassport", new AjaxOptions { HttpMethod = "Post", OnSuccess = "formSuccess(data)" }, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
{
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title">修改密码</h4>
    </div>
    <div class="modal-body">
        <div class="form-group">
            @Html.LabelFor(m => m.OldPwd, new { @class = "col-lg-2 control-label" })
            <div class="col-lg-10">
                @Html.TextBoxFor(m => m.OldPwd, new { @class = "form-control", @autocomplete = "off" })
                @Html.ValidationMessageFor(m => m.OldPwd)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.NewPwd, new { @class = "col-lg-2 control-label" })
            <div class="col-lg-10">
                @Html.TextBoxFor(m => m.NewPwd, new { @class = "form-control", @autocomplete = "off" })
                @Html.ValidationMessageFor(m => m.NewPwd)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.NewPwd2, new { @class = "col-lg-2 control-label" })
            <div class="col-lg-10">
                @Html.TextBoxFor(m => m.NewPwd2, new { @class = "form-control", @autocomplete = "off" })
                @Html.ValidationMessageFor(m => m.NewPwd2)
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-primary">确定</button>
    </div>
}