@model List<VM_UserOper_Index_Grid>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>账号</th>
            <th>角色</th>
            <th>所属学校</th>
            <th>电子教材预览次数</th>
            <th>电影课预览次数</th>
            <th>云课堂预览次数</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count > 0)
        {
            foreach (var item in Model)
            {
                UserOperdata _model = BoxOms.Web.BLL.BookUseBLL.BackUserData(item.UserName);

                <tr>
                    <td>@item.UserName</td>
                    <td>@_model.RoleName</td>
                    <td>@_model.SchoolName</td>
                    <td>@_model.BookNum</td>
                    <td>@_model.DykNum</td>
                    <td>@_model.YktNum</td>
                </tr>
            }
        }
        else
        {
            <tr><td class="nodata" colspan="8">目前没有任何数据</td></tr>
        }
    </tbody>
</table>

