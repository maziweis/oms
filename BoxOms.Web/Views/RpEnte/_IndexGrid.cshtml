@model List<VM_RpEnte_Index_Grid>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>企业Id</th>
            <th>企业名称</th>
            <th>激活码数量</th>
            <th>已激活数量</th>
            <th>备注</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count > 0)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.ActiveNum</td>
                    <td>@item.AlreadyActiveNum</td>
                    <td>@item.Remark</td>
                    <td>
                        <a class="btn btn-default btn-sm" href="@Url.Action("Edit", new { id = item.Id })" title="编辑" data-toggle="modal" data-target="#myModal" data-backdrop="static"><i class="glyphicon glyphicon-edit"></i></a>
                        @if (item.ActiveNum == 0)
                        {
                            <button class="btn btn-default btn-sm btnDelete" type="button" title="删除" dataid="@item.Id"><i class="glyphicon glyphicon-trash"></i></button>
                        }
                    </td>
                </tr>
            }
        }
        else
        {
            <tr><td class="nodata" colspan="5">目前没有任何数据</td></tr>
        }
    </tbody>
</table>