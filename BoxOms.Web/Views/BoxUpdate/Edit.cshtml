@{
    Layout = "~/Views/Shared/_LayoutTopLeft.cshtml";
}

@model VM_BoxUpdateSys_Form

@using (Html.BeginForm("Edit", "BoxUpdate", FormMethod.Post, new { @class = "form-horizontal", id = "form1", enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(m => m.Id)
    <div class="panel panel-default">
        <div class="panel-heading">
            系统更新编辑
        </div>
        <div style="width:600px;">
            <div class="panel-body">
                <div class="form-group">
                    @Html.LabelFor(m => m.VNumber, new { @class = "col-lg-2 control-label" })
                    <div class="col-lg-10">
                        @Html.TextBoxFor(m => m.VNumber, new { @class = "form-control", @autocomplete = "off" })
                        @Html.ValidationMessageFor(m => m.VNumber)
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-2 control-label">下载地址</label>
                    <div class="col-lg-10">
                        <label class="col-lg-2 control-label">@Model.Name</label>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.File, new { @class = "col-lg-2 control-label" })
                    <div class="col-lg-10">
                        @Html.TextBoxFor(m => m.File, new { @class = "form-control", @type = "file", @onchange = "fileChange(this)", @autocomplete = "off" })
                        @Html.ValidationMessageFor(m => m.File)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Principal, new { @class = "col-lg-2 control-label" })
                    <div class="col-lg-10">
                        @Html.TextBoxFor(m => m.Principal, new { @class = "form-control", @autocomplete = "off" })
                        @Html.ValidationMessageFor(m => m.Principal)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Cause, new { @class = "col-lg-2 control-label" })
                    <div class="col-lg-10">
                        @Html.TextAreaFor(m => m.Cause, new { @class = "form-control", @autocomplete = "off" })
                        @Html.ValidationMessageFor(m => m.Cause)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-offset-2 col-lg-10">
                        <button type="submit" class="btn btn-primary">确定</button>
                        <a href="@Url.Action("Index")" class="btn btn-primary">返回</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
