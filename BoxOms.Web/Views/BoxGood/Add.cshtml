@{
    Layout = null;
}

@model VM_BoxGood_Form

@using (Ajax.BeginForm("Add", "BoxGood", new AjaxOptions { HttpMethod = "Post", OnSuccess = "formSuccess(data)" }, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
{
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title">商品新增</h4>
    </div>
    <div class="modal-body">
        <div class="form-group">
            @Html.LabelFor(m => m.SysVersion, new { @class = "col-lg-2 control-label" })
            <div class="col-lg-9">
                @Html.TextBoxFor(m => m.SysVersion, new { @class = "form-control", @autocomplete = "off" })
                @Html.ValidationMessageFor(m => m.SysVersion)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.MAC, new { @class = "col-lg-2 control-label" })
            <div class="col-lg-9">
                @Html.TextBoxFor(m => m.MAC, new { @class = "form-control", @autocomplete = "off" })
                @Html.ValidationMessageFor(m => m.MAC)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Validity, new { @class = "col-lg-2 control-label" })
            <div class="col-lg-9">
                <div class="input-group">
                    @Html.TextBoxFor(m => m.Validity, new { @class = "form-control", @placeholder = "不填表示无限期" })
                    <span class="input-group-addon">个月</span>
                </div>
                @Html.ValidationMessageFor(m => m.Validity)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.IP, new { @class = "col-lg-2 control-label" })
            <div class="col-lg-9">
                @Html.TextBoxFor(m => m.IP, new { @class = "form-control", @autocomplete = "off" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Remark, new { @class = "col-lg-2 control-label" })
            <div class="col-lg-9">
                @Html.TextAreaFor(m => m.Remark, 5, 5, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Remark)
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-primary">确定</button>
    </div>
}