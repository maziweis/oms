@{
    Layout = null;
}

@model VM_RpCode_Index_Grid
@using (Ajax.BeginForm("Edit", "RpCode", new AjaxOptions { HttpMethod = "Post", OnSuccess = "formSuccess(data)" }, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
{
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title">查看详情</h4>
    </div>
    <div class="modal-body">
        <div class="form-group">
            <label class="col-lg-2" style="font-weight:normal; text-align:right;">激活码：</label>
            <span>@Model.Id</span>
        </div>
        <div class="form-group">
            <label class="col-lg-2" style="font-weight:normal; text-align:right;">有效期：</label>
            <span>@(Model.Validity == null ? "无限期" : Model.Validity + "个月")</span>
        </div>
        <div class="form-group">
            <label class="col-lg-2" style="font-weight:normal; text-align:right;">授权人数：</label>
            <span>@(Model.AuthUserCount == null ? "不限人数" : Model.AuthUserCount + "人")</span>
        </div>
        <div class="form-group">
            <label class="col-lg-2" style="font-weight:normal; text-align:right;">所属企业：</label>
            <span>@Model.EnteName</span>
        </div>
        <div class="form-group">
            <label class="col-lg-2" style="font-weight:normal; text-align:right;">所属区域：</label>
            <span>@(BoxOms.Web.BLL.Rp_Code.BackPrName(Model.Id))</span>
        </div>
        <div class="form-group">
            <label class="col-lg-2" style="font-weight:normal; text-align:right;">所属学校：</label>
            <span>@Model.UseSchool</span>
        </div>
        <div class="form-group">
            <label class="col-lg-2" style="font-weight:normal; text-align:right;">是否激活：</label>
            @if (Model.ActiveTime != null)
            {
                <span>是</span>
            }
            else
            {
                <span>否</span>
            }
        </div>
        <div class="form-group">
            <label class="col-lg-2" style="font-weight:normal; text-align:right;">激活MAC：</label>
            <span>@Model.ActiveMac</span>
        </div>
        <div class="form-group">
            <label class="col-lg-2" style="font-weight:normal; text-align:right;">激活硬盘：</label>
            <span>@Model.ActiveDisk</span>
        </div>
        <div class="form-group">
            <label class="col-lg-2" style="font-weight:normal; text-align:right;">激活时间：</label>
            <span>@Model.ActiveTime</span>
        </div>
        <div class="form-group">
            <label class="col-lg-2" style="font-weight:normal; text-align:right;">激活IP：</label>
            <span>@Model.ActiveIp</span>
        </div>
        <div class="form-group">
            <label class="col-lg-2" style="font-weight:normal; text-align:right;">备注：</label>
            <span>@Model.Remark</span>
        </div>
        @{
            if (!string.IsNullOrEmpty(ViewBag.Chinese))
            {
                string[] _ids = ViewBag.Chinese.ToString().Split(',');
                <div class="form-group">
                    <label class="col-lg-2" style="font-weight:normal; text-align:right;">语文：</label>
                    <div class="col-lg-10" style="padding-left:0px;">
                        @for (int i = 0; i < _ids.Length; i++)
                    {
                            <div style="width: 25%;float: left;">
                                @_ids[i].ToString()
                            </div>
                        }
                    </div>
                </div>
            }
            if (!string.IsNullOrEmpty(ViewBag.Math))
            {
                string[] _ids = ViewBag.Math.ToString().Split(',');
                <div class="form-group">
                    <label class="col-lg-2" style="font-weight:normal; text-align:right;">数学：</label>
                    <div class="col-lg-10" style="padding-left:0px;">
                        @for (int i = 0; i < _ids.Length; i++)
                    {
                            <div style="width: 25%;float: left;">
                                @_ids[i].ToString()
                            </div>
                        }
                    </div>
                </div>
            }
            if (!string.IsNullOrEmpty(ViewBag.English))
            {
                string[] _ids = ViewBag.English.ToString().Split(',');
                <div class="form-group">
                    <label class="col-lg-2" style="font-weight:normal; text-align:right;">英语：</label>
                    <div class="col-lg-10" style="padding-left:0px;">
                        @for (int i = 0; i < _ids.Length; i++)
                    {
                            <div style="width: 25%;float: left;">
                                @_ids[i].ToString()
                            </div>
                        }
                    </div>
                </div>
            }
        }
    </div>
            }